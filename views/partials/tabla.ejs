<h2>Lista de productos</h2>

<% if(!productos.productos.state) { %>

        <h3> <%=noProducts.msg %></h3>
    
    <% } else { %>

        <table class="table">

            <thead>
                <tr>
                    <th scope="col">#id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Icono/Imagen</th>
                </tr>
            </thead>

            <tbody>
        
                <% productos.productos.list.forEach( function (product) { %>
                    <tr>
                        <td><%=product.id %></td>
                        <td><%=product.title %></td>
                        <td><%=product.price %></td>
                        <td><img src="" alt="Imagen" srcset=<%=product.thumbnail %>></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
  
<% } %>